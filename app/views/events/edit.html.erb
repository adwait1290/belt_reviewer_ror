<h3> Edit Event </h3>
<form action="/events/<%= @event.id %>" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <input type="hidden" name="_method" value="patch">    
    <input type="text" name="event[name]" value="<%= @event.name %>">
    <input type="date" name="event[doe]" value="<%= @event.doe %>">
    <input type="text" name="event[state]" value="<%= @event.state %>">
    <input type="text" name="event[city]" value="<%= @event.city %>">
    <input type="submit" value="Change Event">
</form>